
var tests = './test/'
var libs = './lib/'
var application_scss = './app/assets/stylesheets/'
var styleguide_markup = './app/views/styleguide/'
var styleguide_scss = ['./app/assets/stylesheets/styleguide/'
                      ,'./app/assets/stylesheets/themes/_default.scss'
                      ,'./app/assets/stylesheets/mixins/_grids.scss'
                      ,'./app/assets/stylesheets/queries/'
                      ]


module.exports.init = function(watchn) {

  watchn.watch('application_css', [application_scss], function(options) {
    watchn.execute('make application.css', options, 'reporter', false, true)
  })

  watchn.watch('styleguide_css', styleguide_scss, function(options) {
    watchn.execute('make styleguide.css', options, 'reporter', false, true)
  })

  watchn.watch('haml', [styleguide_markup], function(options) {
    watchn.execute('make styleguide.html', options, 'haml', false, true)
  })

  watchn.watch('executable', ['src/underoos.coffee'], function(options) {
    watchn.execute('make executable', options, 'coffee', false, true)
  })

}

