      %nav
        %ul.nav.pills.stacked
          %li
            %a(href="#") Pills One
          %li.active
            %a(href="#") Pills Two
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown") Pills Three<span class="caret"></span>
            %ul.dropdown-menu
              %li
                %a(href="#") Subnav 1
              %li
                %a(href="#") Subnav 2
              %li.divider
              %li
                %a(href="#") Subnav 3
          %li
            %a(href="#") Pills Four


