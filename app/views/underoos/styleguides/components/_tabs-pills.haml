
.sg-subsection
  %h3.sg-subheading Tabs &amp; Pills

.sg-subsection
  .sg-half.pull
    %h4 Default Tabs
    %p.sg-todo Describe tabs
    .well(style="margin-top:1.25em;")
      %nav
        %ul.nav.tabs
          %li
            %a(href="#") Tab One
          %li.active
            %a(href="#") Tab Two
          %li
            %a(href="#") Tab Three
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown") Tab Four<span class="caret"></span>
            %ul.dropdown-menu
              %li
                %a(href="#") Subnav 1
              %li
                %a(href="#") Subnav 2
              %li.divider
              %li
                %a(href="#") Subnav 3
