    %h4 Stacked Tabs
    %p Stack tabs by adding the class <code>.stacked</code> to the <code>.tabs</code> element.
    .well(style="margin-top:1.25em;")
      %nav
        %ul.nav.tabs.stacked
          %li
            %a(href="#") Tab One
          %li.active
            %a(href="#") Tab Two
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown") Tab Three<span class="caret"></span>
            %ul.dropdown-menu
              %li
                %a(href="#") Subnav 1
              %li
                %a(href="#") Subnav 2
              %li.divider
              %li
                %a(href="#") Subnav 3
          %li
            %a(href="#") Tab Four

