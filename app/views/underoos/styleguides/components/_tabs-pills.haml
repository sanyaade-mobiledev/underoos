          %li
            %a(href="#") Pills Three
          %li.dropdown
            %a.dropdown-toggle(href="#" data-toggle="dropdown") Pills Four<span class="caret"></span>
            %ul.dropdown-menu
              %li
                %a(href="#") Subnav 1
              %li
                %a(href="#") Subnav 2
              %li.divider
              %li
                %a(href="#") Subnav 3

