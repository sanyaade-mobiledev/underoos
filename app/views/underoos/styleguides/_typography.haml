        %td The <samp>samp</samp> tag defines sample computer code

.sg-subsection
  .sg-half.pull
    %h4 The basic block
    %p Use the <code>pre</code> element for multiline code blocks.
    %pre.html
      = preserve do
        :escaped
          <!-- basic block -->
          <pre>
            <section>
              <h1>Heading</h1>
              <p>Some Copy...</p>
            </section>
          </pre>
    %pre.haml.hidden
      = preserve do
        :escaped
          <!-- basic block -->
          %pre
            %section
              %h1 Heading
              %p Some Copy...
  .sg-half.push
    %h4 Google's Prettify
    %p Add the <code>.prettyprint</code> class for basic syntax highlighting.
    %pre.prettyprint.html
      = preserve do
        :escaped
          <!-- make it pretty -->
          <pre class="prettyprint">
            <section>
              <h1>Heading</h1>
              <p>Some Copy...</p>
            </section>
          </pre>
    %pre.prettyprint.haml.hidden
      = preserve do
        :escaped
          <!-- make it pretty -->
          %pre.prettyprint
            %section
              %h1 Heading
              %p Some Copy...


