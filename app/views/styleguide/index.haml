
!!! 5
%html.no-js.ie6.oldie
  %head
    %title underoos are fun to wear.
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %link(rel="stylesheet" href="/assets/application.css" type="text/css")
    %link(rel="stylesheet" href="/assets/styleguide.css" type="text/css")

  %body
    .styleguide-masthead(data-scrollspy="scrollspy")
      .container
        %nav
          %ul
            %li
              %a.styleguide-title(href="/styleguide") styleguide<span>.</span>
            %li
              %a(href="#typography") Typography
            %li
              %a(href="#palettes") Palettes
            %li
              %a(href="#elements") Elements
            %li
              %a(href="#components") Components
            %li
              %a(href="#tables") Tables
            %li
              %a(href="#forms") Forms
            %li
              %a(href="#structures") Structures
            %li
              %a(href="#layouts") Layouts
            %li
              %a(href="#media") Media
            %li
              %a(href="#resources") Resources

    .container

      .styleguide#typography
        .styleguide-header
          .styleguide-h1 Typography
          .styleguide-note Contains all of the heading, paragraph, lists, and inline typographic elements.
        = haml(:"/styleguide/_typography", :layout => false)

      .styleguide#palettes
        .styleguide-header
          .styleguide-h1 Palettes
          .styleguide-note Various color palettes and themes used in the application.
        = haml(:"/styleguide/_palettes", :layout => false)


      .styleguide#elements
        .styleguide-header
          .styleguide-h1 Elements
          .styleguide-note Base class styles to enhance common elements found in an application.
        = haml(:"/styleguide/_elements", :layout => false)

      .styleguide#components
        .styleguide-header
          .styleguide-h1 Components
          .styleguide-note Components consists of common patterns used in many applications but are not defined as base element tags.
        = haml(:"/styleguide/_components", :layout => false)

      .styleguide#tables
        .styleguide-header
          .styleguide-h1 Tables
          .styleguide-note Tables are used to represent tabular data.
        = haml(:"/styleguide/_tables", :layout => false)

      .styleguide#forms
        .styleguide-header
          .styleguide-h1 Forms
          .styleguide-note Base input, textarea, labels, selects, button styles associated with form elements. Tuned to play with <a href="https://github.com/justinfrench/formtastic">formtastic</a>.
        = haml(:"/styleguide/_forms", :layout => false)

      .styleguide#structures
        .styleguide-header
          .styleguide-h1 Structures
          .styleguide-note Structures consists of grids systems and common size elements used within the application. Collapse the browser window to see structures for media queries.
        = haml(:"/styleguide/_structures", :layout => false)

      .styleguide#layouts
        .styleguide-header
          .styleguide-h1 Layouts
          .styleguide-note Layouts consists of various templates that are specific to the application.
        = haml(:"/styleguide/_layouts", :layout => false)

      .styleguide#media
        .styleguide-header
          .styleguide-h1 Media
          .styleguide-note Showcases the various media elements that are in use by the application.
        = haml(:"/styleguide/_media", :layout => false)

      .styleguide#resources
        .styleguide-header
          .styleguide-h1 External Resources
          .styleguide-note Showcases the various media elements that are in use by the application.
        = haml(:"/styleguide/_resources", :layout => false)


    .guider

    - browser_links = '<a href="http://www.google.com/chrome/">Google Chrome</a>, <a href="http://www.apple.com/safari/download/">Apple Safari</a>, or <a href="http://www.mozilla.org/en-US/firefox/new/">Mozilla Firefox</a>'
    - ie_message = 'We recommend you upgrade to the <a href="http://windows.microsoft.com/en-US/internet-explorer/downloads/ie-9/worldwide-languages">latest version</a> or use one of the browsers listed below.'
    #upgrade_messages
      #no_js.upgrade-icon.danger
        .upgrade-message
          %p For full functionality of this site it is necessary to enable JavaScript.
          %br
          %p Here are the <a href="http://www.enable-javascript.com/" target="_blank">instructions</a> to enable JavaScript in your web browser.
      #ie6.upgrade-icon.danger
        .upgrade-message
          %p We've noticed you are using Internet Explorer 6. This browser is not supported by this application.
          %br
          %p= ie_message
          %br
          %p= browser_links
      #ie7.upgrade-icon.danger
        .upgrade-message
          %p We've noticed you are using Internet Explorer 7. This browser is not supported by this application.
          %br
          %p= ie_message
          %br
          %p= browser_links
      #ie8.upgrade-icon.alert
        .upgrade-message
          %p We've noticed you are using Internet Explorer 8.
          %br
          %p= ie_message
          %br
          %p= browser_links
      #oldie.upgrade-icon.alert
        .upgrade-message
          %p We've noticed you are using an older version of Internet Explorer.
          %br
          %p= ie_message
          %br
          %p= browser_links




    %script(src="/assets/application.js" type="text/javascript" charset="utf-8")
    :javascript
      $(function(){$("a[rel=twipsy]").twipsy({live: true})})
      $(function(){$("a[rel=popover]").popover({live: true})})
      prettyPrint()

