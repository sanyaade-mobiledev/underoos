
- total_width = 984
- column_width = 70
- num_columns = 12
- total_margin = 12
- single_margin = (total_margin / 2)

%br
.nagari-note Grid structure:  #{total_width}px ~ #{num_columns} columns ~ #{single_margin}px / #{single_margin}px margins

.nagari-subsection standard horizontal columns
- (1..num_columns).to_a.reverse.each do |i|
  ! #{"<div class='_underoos-col-#{i}'></div>"}
  - if num_columns - i > 0
    ! #{"<div class='_underoos-col-#{num_columns - i}'></div>"}
.nagari-clearfix

.nagari-subsection push / pull horizontal columns
- (1..num_columns).to_a.reverse.each do |i|
  ! #{"<div class='_underoos-pull-#{i}'></div>"}
  - if num_columns - i > 0
    ! #{"<div class='_underoos-push-#{num_columns - i} alt'></div>"}
  - else
    ! #{"<div class='_underoos-push-#{num_columns} alt'></div>"}
.nagari-clearfix

.nagari-subsection full horizontal columns (pushed and pulled)
- (1..num_columns).to_a.reverse.each do |i|
  ! #{"<div class='_underoos-full-#{i}'></div>"}
  - if num_columns - i > 0
    ! #{"<div class='_underoos-full-#{num_columns - i} alt'></div>"}
.nagari-clearfix


.nagari-subsection offset columns (push / pull / full values not shown)
- (1..num_columns - 1).to_a.reverse.each do |i|
  ! #{"<div class='_underoos-offset-#{i}'></div>"}
.nagari-clearfix

